{
    "compilerOptions": {
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "rootDir": "./src/",
        "outDir": "./dist/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}